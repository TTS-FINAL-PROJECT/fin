body {
  background: #ccc
  width: 500px;
  font-family: sans-serif;
}

.bigger-box {
  width: 500px;
  background-color: #bababa;
  display: block;
  border: 1px solid black;
}

.chat-area {
  background-color: white;
  color: black;
  width: 400px;
  height: 200px;
  display: block;
  position: relative;
  margin: 10px auto;
  border: 1px solid black;
}

h1 {
  background-color: blue;
  color: white;
  margin: 0px;
  padding: 10px;
  text-align: center;
  display: block;
}

.message {
  position: relative;
  margin: 0 auto;
  margin-bottom: 10px;
  width: 100%;
  height: 25px;

}

button {
  background-color: #48f442;
  box-shadow:  2px 2px 2px gray;
  color: black;
  display: block;
  padding: 5px;
  position: relative;
  margin: 0 0 0 auto;
  width: 75px;
}

li {
  list-style-type: none;
}

.msg-author {
  font-weight: bold;
  padding-left: 10px;
}
.msg-text {
  display:block;
  padding-left: 30px;
}

.controls {
  padding: 10px 50px;

}

button:active {
  box-shadow: disabled;
  background-color: teal;
  display: block;
}
